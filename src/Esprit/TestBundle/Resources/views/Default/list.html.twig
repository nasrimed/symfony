
{% extends 'EspritTestBundle::template.html.twig' %}
{% block body %}


    <div class="row-fluid ">
        <div class="box pinkDark span12">
            <div class="box-header" data-original-title >
                <h2><i class="halflings-icon white wrench"></i><span class="break"></span>Gestion Marque</h2>
                <div class="box-icon"> <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a> </div>
            </div>
            <div class="box-content">
                <div class="row-fluid"> <a class="btn btn-affectation" href="{{ path('esprit_test_add') }}"> + </a> </div>
                <div class="clearfix"><br>
                </div>
                <div class="row-fluid">
                    <table class="records_list table table-striped table-bordered bootstrap-datatable datatable dataTable">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Marque</th>
                            <th>pays</th>
                            <th>Agent</th>
                            <th>Email </th>
                            <th>Supprimer</th>
                            <th>Mise a jour</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for modele in modeles %}
                            <tr>
                                <td>{{ modele.id }}</td>
                                <td>{{ modele.libelle }}</td>
                                <td>{{ modele.pays }}</td>
                                <td>{{ modele.agent }}</td>
                                <td>{{ modele.emailagent }}</td>

                                <td>
                                    <a class="btn btn-danger" href="{{ path('esprit_test_delete',{'id':modele.id}) }}">Delete</a>
                                </td>
                                <td>

                                    <a class="btn btn-info" href="{{ path('esprit_test_update',{'id':modele.id}) }}">
                                        Update  </a>

                                </td>






                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
